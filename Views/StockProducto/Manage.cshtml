@{
    var p = ViewBag.Producto as mi_ferreteria.Models.Producto;
    long stock = ViewBag.Stock ?? 0;
    ViewData["Title"] = $"Stock de {p?.Nombre}";
}
<h2>Stock de @p?.Nombre (@p?.Sku)</h2>
<div class="mb-3">Stock actual: <span class="badge bg-info">@stock</span></div>

@if (TempData["StockError"] is string err && !string.IsNullOrEmpty(err))
{
    <div class="alert alert-danger">@err</div>
}

<form asp-action="Manage" method="post">
    <input type="hidden" name="id" value="@p?.Id" />
    <div class="row g-3">
        <div class="col-md-3">
            <label class="form-label">Tipo</label>
            <select name="tipo" class="form-select">
                <option value="INGRESO">Ingreso</option>
                <option value="EGRESO">Egreso</option>
            </select>
        </div>
        <div class="col-md-3">
            <label class="form-label">Cantidad</label>
            <input name="cantidad" type="number" min="1" class="form-control" />
        </div>
        <div class="col-md-6">
            <label class="form-label">Motivo</label>
            <input name="motivo" class="form-control" />
        </div>
    </div>
    <div class="d-flex justify-content-center gap-2 mt-4">
        <button type="submit" class="btn btn-primary px-5">Aplicar</button>
        <a asp-controller="Producto" asp-action="Index" class="btn btn-outline-secondary px-5">Volver</a>
    </div>
</form>

<hr class="my-4" />
<div class="row g-4 stock-manage">
    <div class="col-12 col-lg-6">
        <h5>Historial de ingresos</h5>
        <div class="table-responsive">
            <table class="table table-striped table-hover table-bordered align-middle">
                <thead>
                    <tr>
                        <th>Fecha</th>
                        <th class="text-center">Cantidad</th>
                        <th>Motivo</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        var ingresos = ViewBag.Ingresos as IEnumerable<mi_ferreteria.Models.StockMovimiento>;
                    }
                    @if (ingresos == null || !ingresos.Any())
                    {
                        <tr><td colspan="3" class="text-center text-muted">Sin movimientos</td></tr>
                    }
                    else
                    {
                        foreach (var m in ingresos)
                        {
                            <tr>
                                <td>@m.Fecha.LocalDateTime.ToString("yyyy-MM-dd HH:mm")</td>
                                <td class="text-success text-center">+@m.Cantidad</td>
                                <td>@(string.IsNullOrWhiteSpace(m.Motivo) ? "-" : m.Motivo)</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
        @{
            int ingresosPage = ViewBag.IngresosPage is int ? (int)ViewBag.IngresosPage : 1;
            int ingresosTotalPages = ViewBag.IngresosTotalPages is int ? (int)ViewBag.IngresosTotalPages : 1;
        }
        @if (ingresosTotalPages > 1)
        {
            var start = System.Math.Max(1, ingresosPage - 2);
            var end = System.Math.Min(ingresosTotalPages, ingresosPage + 2);
            <nav aria-label="Paginación ingresos" class="mt-2">
                <ul class="pagination pagination-sm justify-content-center">
                    <li class="page-item @(ingresosPage <= 1 ? "disabled" : "")">
                        <a class="page-link" asp-action="Manage" asp-route-id="@p.Id" asp-route-ingresosPage="@(ingresosPage - 1)" asp-route-egresosPage="@ViewBag.EgresosPage">Anterior</a>
                    </li>
                    @for (var i = start; i <= end; i++)
                    {
                        <li class="page-item @(i == ingresosPage ? "active" : "")">
                            <a class="page-link" asp-action="Manage" asp-route-id="@p.Id" asp-route-ingresosPage="@i" asp-route-egresosPage="@ViewBag.EgresosPage">@i</a>
                        </li>
                    }
                    <li class="page-item @(ingresosPage >= ingresosTotalPages ? "disabled" : "")">
                        <a class="page-link" asp-action="Manage" asp-route-id="@p.Id" asp-route-ingresosPage="@(ingresosPage + 1)" asp-route-egresosPage="@ViewBag.EgresosPage">Siguiente</a>
                    </li>
                </ul>
            </nav>
        }
    </div>
    <div class="col-12 col-lg-6">
        <h5>Historial de egresos</h5>
        <div class="table-responsive">
            <table class="table table-striped table-hover table-bordered align-middle">
                <thead>
                    <tr>
                        <th>Fecha</th>
                        <th class="text-center">Cantidad</th>
                        <th>Motivo</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        var egresos = ViewBag.Egresos as IEnumerable<mi_ferreteria.Models.StockMovimiento>;
                    }
                    @if (egresos == null || !egresos.Any())
                    {
                        <tr><td colspan="3" class="text-center text-muted">Sin movimientos</td></tr>
                    }
                    else
                    {
                        foreach (var m in egresos)
                        {
                            <tr>
                                <td>@m.Fecha.LocalDateTime.ToString("yyyy-MM-dd HH:mm")</td>
                                <td class="text-danger text-center">-@m.Cantidad</td>
                                <td>@(string.IsNullOrWhiteSpace(m.Motivo) ? "-" : m.Motivo)</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
        @{
            int egresosPage = ViewBag.EgresosPage is int ? (int)ViewBag.EgresosPage : 1;
            int egresosTotalPages = ViewBag.EgresosTotalPages is int ? (int)ViewBag.EgresosTotalPages : 1;
        }
        @if (egresosTotalPages > 1)
        {
            var start = System.Math.Max(1, egresosPage - 2);
            var end = System.Math.Min(egresosTotalPages, egresosPage + 2);
            <nav aria-label="Paginación egresos" class="mt-2">
                <ul class="pagination pagination-sm justify-content-center">
                    <li class="page-item @(egresosPage <= 1 ? "disabled" : "")">
                        <a class="page-link" asp-action="Manage" asp-route-id="@p.Id" asp-route-ingresosPage="@ViewBag.IngresosPage" asp-route-egresosPage="@(egresosPage - 1)">Anterior</a>
                    </li>
                    @for (var i = start; i <= end; i++)
                    {
                        <li class="page-item @(i == egresosPage ? "active" : "")">
                            <a class="page-link" asp-action="Manage" asp-route-id="@p.Id" asp-route-ingresosPage="@ViewBag.IngresosPage" asp-route-egresosPage="@i">@i</a>
                        </li>
                    }
                    <li class="page-item @(egresosPage >= egresosTotalPages ? "disabled" : "")">
                        <a class="page-link" asp-action="Manage" asp-route-id="@p.Id" asp-route-ingresosPage="@ViewBag.IngresosPage" asp-route-egresosPage="@(egresosPage + 1)">Siguiente</a>
                    </li>
                </ul>
            </nav>
        }
    </div>
</div>
