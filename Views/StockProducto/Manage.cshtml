@{
    var p = ViewBag.Producto as mi_ferreteria.Models.Producto;
    long stock = ViewBag.Stock ?? 0;
    ViewData["Title"] = $"Stock de {p?.Nombre}";
}
<h2>Stock de @p?.Nombre (@p?.Sku)</h2>
<div class="mb-3">Stock actual: <span class="badge bg-info">@stock</span></div>

@if (TempData["StockError"] is string err && !string.IsNullOrEmpty(err))
{
    <div class="alert alert-danger">@err</div>
}

<form asp-action="Manage" method="post">
    <input type="hidden" name="id" value="@p?.Id" />
    <div class="row g-3">
        <div class="col-md-3">
            <label class="form-label">Tipo</label>
            <select name="tipo" class="form-select">
                <option value="INGRESO">Ingreso</option>
                <option value="EGRESO">Egreso</option>
            </select>
        </div>
        <div class="col-md-3">
            <label class="form-label">Cantidad</label>
            <input name="cantidad" type="number" min="1" class="form-control" />
        </div>
        <div class="col-md-6">
            <label class="form-label">Motivo</label>
            <input name="motivo" class="form-control" />
        </div>
    </div>
    <div class="d-flex justify-content-center gap-2 mt-4">
        <button type="submit" class="btn btn-primary px-5">Aplicar</button>
        <a asp-controller="Producto" asp-action="Index" class="btn btn-outline-secondary px-5">Volver</a>
    </div>
</form>

