@{
    var p = ViewBag.Producto as mi_ferreteria.Models.Producto;
    long stock = ViewBag.Stock ?? 0;
    ViewData["Title"] = $"Stock de {p?.Nombre}";
}
<h2>Stock de @p?.Nombre (@p?.Sku)</h2>
<div class="mb-3">Stock actual: <span class="badge bg-info">@stock</span></div>

@if (TempData["StockError"] is string err && !string.IsNullOrEmpty(err))
{
    <div class="alert alert-danger">@err</div>
}

<form asp-action="Manage" method="post">
    <input type="hidden" name="id" value="@p?.Id" />
    <div class="row g-3">
        <div class="col-md-3">
            <label class="form-label">Tipo</label>
            <select name="tipo" class="form-select">
                <option value="INGRESO">Ingreso</option>
                <option value="EGRESO">Egreso</option>
            </select>
        </div>
        <div class="col-md-3">
            <label class="form-label">Cantidad</label>
            <input name="cantidad" type="number" min="1" class="form-control" />
        </div>
        <div class="col-md-6">
            <label class="form-label">Motivo</label>
            <input name="motivo" class="form-control" />
        </div>
    </div>
    <div class="d-flex justify-content-center gap-2 mt-4">
        <button type="submit" class="btn btn-primary px-5">Aplicar</button>
        <a asp-controller="Producto" asp-action="Index" class="btn btn-outline-secondary px-5">Volver</a>
    </div>
</form>

<hr class="my-4" />
<div class="row g-4 stock-manage">
    <div class="col-12 col-lg-6">
        <h5>Historial de ingresos</h5>
        <div class="table-responsive">
            <table class="table table-striped table-hover table-bordered align-middle">
                <thead>
                    <tr>
                        <th>Fecha</th>
                        <th class="text-center">Cantidad</th>
                        <th>Motivo</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        var ingresos = ViewBag.Ingresos as IEnumerable<mi_ferreteria.Models.StockMovimiento>;
                    }
                    @if (ingresos == null || !ingresos.Any())
                    {
                        <tr><td colspan="3" class="text-center text-muted">Sin movimientos</td></tr>
                    }
                    else
                    {
                        foreach (var m in ingresos)
                        {
                            <tr>
                                <td>@m.Fecha.LocalDateTime.ToString("yyyy-MM-dd HH:mm")</td>
                                <td class="text-success text-center">+@m.Cantidad</td>
                                <td>@(string.IsNullOrWhiteSpace(m.Motivo) ? "-" : m.Motivo)</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="col-12 col-lg-6">
        <h5>Historial de egresos</h5>
        <div class="table-responsive">
            <table class="table table-striped table-hover table-bordered align-middle">
                <thead>
                    <tr>
                        <th>Fecha</th>
                        <th class="text-center">Cantidad</th>
                        <th>Motivo</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        var egresos = ViewBag.Egresos as IEnumerable<mi_ferreteria.Models.StockMovimiento>;
                    }
                    @if (egresos == null || !egresos.Any())
                    {
                        <tr><td colspan="3" class="text-center text-muted">Sin movimientos</td></tr>
                    }
                    else
                    {
                        foreach (var m in egresos)
                        {
                            <tr>
                                <td>@m.Fecha.LocalDateTime.ToString("yyyy-MM-dd HH:mm")</td>
                                <td class="text-danger text-center">-@m.Cantidad</td>
                                <td>@(string.IsNullOrWhiteSpace(m.Motivo) ? "-" : m.Motivo)</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
