@{
    var p = ViewBag.Producto as mi_ferreteria.Models.Producto;
    long stock = ViewBag.Stock ?? 0;
    var unidad = p?.UnidadMedida ?? "unidad";
    ViewData["Title"] = $"Stock de {p?.Nombre}";
    var canMoveStock = User.IsInRole("Administrador") || User.IsInRole("Stock");
}
<h2>Stock de @p?.Nombre (@p?.Sku)</h2>
<div class="mb-3">Stock actual: <span class="badge bg-info">@stock @unidad</span></div>

@if (TempData["StockError"] is string err && !string.IsNullOrEmpty(err))
{
    <div class="alert alert-danger">@err</div>
}

@if (!canMoveStock)
{
    <div class="alert alert-warning">
        Los usuarios Vendedor pueden consultar stock pero no registrar ingresos o egresos.
    </div>
}

<form asp-action="Manage" method="post">
    <input type="hidden" name="id" value="@p?.Id" />
    <fieldset @(canMoveStock ? "" : "disabled")>
        <div class="row g-3">
            <div class="col-md-3">
                <label class="form-label">Tipo</label>
                <select name="tipo" class="form-select">
                    <option value="INGRESO">Ingreso</option>
                    <option value="EGRESO">Egreso</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label">Cantidad (@unidad)</label>
                <input name="cantidad" type="number" min="1" class="form-control" />
            </div>
            <div class="col-md-6">
                <label class="form-label">Motivo</label>
                <input name="motivo" class="form-control" required placeholder="Describa el motivo" />
            </div>
        </div>
        <div class="d-flex justify-content-center gap-2 mt-4">
            <button type="submit" class="btn btn-primary px-5" @(canMoveStock ? "" : "disabled")>Aplicar</button>
            <a asp-controller="Producto" asp-action="Index" class="btn btn-outline-secondary px-5">Volver</a>
        </div>
    </fieldset>
</form>

<hr class="my-4" />
<div class="row g-4 stock-manage">
    <div class="col-12">
        <h5>Historial de movimientos</h5>
        <div class="table-responsive">
            <table class="table table-striped table-hover table-bordered align-middle text-center">
                <thead>
                    <tr>
                        <th class="text-center">Fecha</th>
                        <th class="text-center">Tipo</th>
                        <th class="text-center">Cantidad (@unidad)</th>
                        <th class="text-center">Motivo</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        var movimientos = ViewBag.Movimientos as IEnumerable<mi_ferreteria.Models.StockMovimiento>;
                    }
                    @if (movimientos == null || !movimientos.Any())
                    {
                        <tr><td colspan="4" class="text-center text-muted">Sin movimientos</td></tr>
                    }
                    else
                    {
                        foreach (var m in movimientos)
                        {
                            var esIngreso = string.Equals(m.Tipo, "INGRESO", System.StringComparison.OrdinalIgnoreCase);
                            var claseCant = esIngreso ? "text-success" : "text-danger";
                            var signo = esIngreso ? "+" : "-";
                            <tr>
                                <td class="text-center">@m.Fecha.LocalDateTime.ToString("yyyy-MM-dd HH:mm")</td>
                                <td class="text-center">@(esIngreso ? "Ingreso" : "Egreso")</td>
                                <td class="text-center @claseCant">@signo@m.Cantidad</td>
                                <td class="text-center">@(string.IsNullOrWhiteSpace(m.Motivo) ? "-" : m.Motivo)</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
        @{
            int page = ViewBag.Page is int ? (int)ViewBag.Page : 1;
            int totalPages = ViewBag.TotalPages is int ? (int)ViewBag.TotalPages : 1;
        }
        @if (totalPages > 1)
        {
            var start = System.Math.Max(1, page - 2);
            var end = System.Math.Min(totalPages, page + 2);
            <nav aria-label="Paginacion movimientos" class="mt-2">
                <ul class="pagination pagination-sm justify-content-center">
                    <li class="page-item @(page <= 1 ? "disabled" : "")">
                        <a class="page-link" asp-action="Manage" asp-route-id="@p.Id" asp-route-page="@(page - 1)">Anterior</a>
                    </li>
                    @for (var i = start; i <= end; i++)
                    {
                        <li class="page-item @(i == page ? "active" : "")">
                            <a class="page-link" asp-action="Manage" asp-route-id="@p.Id" asp-route-page="@i">@i</a>
                        </li>
                    }
                    <li class="page-item @(page >= totalPages ? "disabled" : "")">
                        <a class="page-link" asp-action="Manage" asp-route-id="@p.Id" asp-route-page="@(page + 1)">Siguiente</a>
                    </li>
                </ul>
            </nav>
        }
    </div>
</div>
