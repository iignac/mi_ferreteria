@model mi_ferreteria.Models.Cliente
@{
    ViewData["Title"] = "Detalle de cliente";
    decimal? saldoActual = ViewBag.SaldoActual as decimal?;
    decimal? saldoDisponible = ViewBag.SaldoDisponible as decimal?;
    string? notaOk = TempData["NotaOk"] as string;
    string? notaError = TempData["NotaError"] as string;
}

<h2>Detalle de cliente</h2>
@if (!string.IsNullOrWhiteSpace(notaOk))
{
    <div class="alert alert-success">@notaOk</div>
}
@if (!string.IsNullOrWhiteSpace(notaError))
{
    <div class="alert alert-danger">@notaError</div>
}

<div class="card mt-3">
    <div class="card-header">
        Datos generales
    </div>
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">ID</dt>
            <dd class="col-sm-9">@Model.Id</dd>

            <dt class="col-sm-3">Nombre / Razón social</dt>
            <dd class="col-sm-9">@Model.Nombre</dd>

            <dt class="col-sm-3">Apellido</dt>
            <dd class="col-sm-9">@Model.Apellido</dd>

            <dt class="col-sm-3">Documento</dt>
            <dd class="col-sm-9">
                @if (!string.IsNullOrWhiteSpace(Model.TipoDocumento) || !string.IsNullOrWhiteSpace(Model.NumeroDocumento))
                {
                    @($"{Model.TipoDocumento} {Model.NumeroDocumento}")
                }
                else
                {
                    @("-")
                }
            </dd>

            <dt class="col-sm-3">Dirección</dt>
            <dd class="col-sm-9">@(!string.IsNullOrWhiteSpace(Model.Direccion) ? Model.Direccion : "-")</dd>

            <dt class="col-sm-3">Teléfono</dt>
            <dd class="col-sm-9">@(!string.IsNullOrWhiteSpace(Model.Telefono) ? Model.Telefono : "-")</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@(!string.IsNullOrWhiteSpace(Model.Email) ? Model.Email : "-")</dd>

            <dt class="col-sm-3">Fecha de alta</dt>
            <dd class="col-sm-9">@Model.FechaAlta.ToString("yyyy-MM-dd HH:mm")</dd>

            <dt class="col-sm-3">Estado</dt>
            <dd class="col-sm-9">
                @if (Model.Activo)
                {
                    <span class="badge bg-success">Activo</span>
                }
                else
                {
                    <span class="badge bg-secondary">Inactivo</span>
                }
            </dd>
        </dl>
    </div>
</div>

<div class="card mt-3">
    <div class="card-header">
        Cuenta corriente
    </div>
    <div class="card-body">
        @if (!Model.CuentaCorrienteHabilitada)
        {
            <p class="mb-0 text-muted">La cuenta corriente no está habilitada para este cliente.</p>
        }
        else
        {
            <dl class="row mb-0">
                <dt class="col-sm-3">Tipo de cliente</dt>
                <dd class="col-sm-9">
                    @(Model.TipoCliente == "CUENTA_CORRIENTE" ? "Cuenta corriente" : "Consumidor final")
                </dd>

                <dt class="col-sm-3">Límite de crédito</dt>
                <dd class="col-sm-9">$ @Model.LimiteCredito.ToString("N2")</dd>

                <dt class="col-sm-3">Saldo actual (deuda)</dt>
                <dd class="col-sm-9">
                    @if (saldoActual.HasValue)
                    {
                        <span class="@(saldoActual.Value > 0 ? "text-danger" : (saldoActual.Value < 0 ? "text-success" : ""))">
                            $ @saldoActual.Value.ToString("N2")
                        </span>
                    }
                    else
                    {
                        @("-")
                    }
                </dd>

                <dt class="col-sm-3">Saldo disponible</dt>
                <dd class="col-sm-9">
                    @if (saldoDisponible.HasValue)
                    {
                        <span class="@(saldoDisponible.Value <= 0 ? "text-danger" : "text-success")">
                            $ @saldoDisponible.Value.ToString("N2")
                        </span>
                    }
                    else
                    {
                        @("-")
                    }
                </dd>
            </dl>
            <p class="text-muted small mt-2 mb-0">
                El saldo actual incluye el saldo inicial, las compras (deuda) y los pagos/ajustes registrados.
            </p>
            <div class="mt-3">
                <a asp-action="CuentaCorriente" asp-route-id="@Model.Id" class="btn btn-outline-primary btn-sm">
                    Ver movimientos de cuenta
                </a>
            </div>
        }
    </div>
</div>

<div class="card mt-3">
    <div class="card-header">
        Notas en cuenta corriente
    </div>
    <div class="card-body">
        @if (!Model.CuentaCorrienteHabilitada)
        {
            <p class="mb-0 text-muted">La cuenta corriente no esta habilitada para este cliente.</p>
        }
        else
        {
            var puedeCredito = saldoActual.HasValue && saldoActual.Value > 0;
            var puedeDebito = saldoDisponible.HasValue && saldoDisponible.Value > 0;
            var maxCredito = puedeCredito ? saldoActual!.Value.ToString("F2", System.Globalization.CultureInfo.InvariantCulture) : "0";
            var maxDebito = puedeDebito ? saldoDisponible!.Value.ToString("F2", System.Globalization.CultureInfo.InvariantCulture) : "0";
            if (!puedeCredito && !puedeDebito)
            {
                <p class="mb-0 text-muted">No hay saldo disponible ni deuda para generar notas.</p>
            }
            else
            {
                <form asp-action="GenerarNotaCuentaCorriente" method="post" class="row g-2">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="clienteId" value="@Model.Id" />
                    <div class="col-md-4">
                        <label class="form-label">Tipo de nota</label>
                        <select class="form-select" id="tipoNotaSelect" name="tipoNota" required>
                            <option value="">Seleccione...</option>
                            @if (puedeCredito)
                            {
                                <option value="CREDITO" data-max="@maxCredito">Nota de credito</option>
                            }
                            else
                            {
                                <option value="CREDITO" data-max="@maxCredito" disabled>Nota de credito</option>
                            }
                            @if (puedeDebito)
                            {
                                <option value="DEBITO" data-max="@maxDebito">Nota de debito</option>
                            }
                            else
                            {
                                <option value="DEBITO" data-max="@maxDebito" disabled>Nota de debito</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Monto</label>
                        <input class="form-control" type="number" step="0.01" min="0.01"
                               name="monto" id="notaMontoInput" required />
                        <small class="text-muted" id="notaMaxHelp"></small>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Descripcion</label>
                        <input class="form-control" type="text" name="descripcion" placeholder="Opcional" />
                    </div>
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary" id="notaSubmitBtn">Generar nota</button>
                    </div>
                </form>
            }
        }
    </div>
</div>
<div class="mt-4">
    <a asp-action="Index" class="btn btn-outline-secondary">Volver al listado</a>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar cliente</a>
</div>

@section Scripts {
    <script>
        (function () {
            const select = document.getElementById('tipoNotaSelect');
            const montoInput = document.getElementById('notaMontoInput');
            const help = document.getElementById('notaMaxHelp');
            const submitBtn = document.getElementById('notaSubmitBtn');

            if (!select || !montoInput || !help || !submitBtn) {
                return;
            }

            function actualizarNotaUI() {
                const option = select.options[select.selectedIndex];
                if (!option || !option.value) {
                    montoInput.removeAttribute('max');
                    help.textContent = '';
                    submitBtn.textContent = 'Generar nota';
                    return;
                }

                const max = option.getAttribute('data-max');
                if (max && parseFloat(max) > 0) {
                    montoInput.setAttribute('max', max);
                    help.textContent = 'Maximo: $ ' + Number(max).toLocaleString(undefined, { minimumFractionDigits: 2, maximumFractionDigits: 2 });
                } else {
                    montoInput.removeAttribute('max');
                    help.textContent = '';
                }

                submitBtn.textContent = option.value === 'CREDITO' ? 'Generar nota de credito' : 'Generar nota de debito';
            }

            select.addEventListener('change', actualizarNotaUI);
            actualizarNotaUI();
        })();
    </script>
}




