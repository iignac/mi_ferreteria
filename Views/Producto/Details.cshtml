@model mi_ferreteria.Models.Producto
@{
    ViewData["Title"] = "Detalle de Producto";
    var barcodes = ViewBag.Barcodes as IEnumerable<mi_ferreteria.Models.ProductoCodigoBarra> ?? Enumerable.Empty<mi_ferreteria.Models.ProductoCodigoBarra>();
    var stock = ViewBag.Stock is long l ? l : 0;
    var returnPage = ViewBag.ReturnPage is int ? (int)ViewBag.ReturnPage : 1;
    var cats = ViewBag.CategoriasNombres as IEnumerable<string>;
    var canManageProductos = User.IsInRole("Administrador") || User.IsInRole("Stock");
}
<h2 class="mb-3">Detalle de Producto</h2>

<div class="card">
  <div class="card-body">
    <div class="row g-3">
      <div class="col-md-3"><strong>ID:</strong> @Model.Id</div>
      <div class="col-md-3"><strong>SKU:</strong> @Model.Sku</div>
      <div class="col-md-6"><strong>Nombre:</strong> @Model.Nombre</div>
      <div class="col-12">
        <strong>Categorias:</strong>
        @if (cats != null && cats.Any())
        {
            <span class="ms-2">
            @foreach (var n in cats)
            {
                <span class="cat-chip badge bg-primary-subtle text-primary border border-primary me-1">@n</span>
            }
            </span>
        }
        else
        {
            <span class="ms-2">-</span>
        }
      </div>
      <div class="col-md-3"><strong>Precio:</strong> $ @Model.PrecioVentaActual</div>
      <div class="col-md-3"><strong>Stock minimo:</strong> @Model.StockMinimo</div>
      <div class="col-md-3"><strong>Unidad de medida:</strong> @(string.IsNullOrWhiteSpace(Model.UnidadMedida) ? "-" : Model.UnidadMedida)</div>
      <div class="col-md-3"><strong>Activo:</strong> @(Model.Activo ? "Si" : "No")</div>
      <div class="col-md-3"><strong>Ubicacion codigo:</strong> @(string.IsNullOrWhiteSpace(Model.UbicacionCodigo) ? "-" : Model.UbicacionCodigo)</div>
      <div class="col-md-3"><strong>Stock actual:</strong> @stock</div>
      <div class="col-md-3"><strong>Creado:</strong> @Model.CreatedAt.LocalDateTime</div>
      <div class="col-md-3"><strong>Actualizado:</strong> @Model.UpdatedAt.LocalDateTime</div>
    </div>
    <hr/>
    <h5>Codigos de barra</h5>
    @if (!barcodes.Any())
    {
        <div class="text-muted">Sin codigos de barra.</div>
    }
    else
    {
        <ul class="list-group">
            @foreach (var bc in barcodes)
            {
                <li class="list-group-item d-flex justify-content-between">
                    <span>@bc.CodigoBarra</span>
                    <span class="text-muted">@bc.Tipo</span>
                </li>
            }
        </ul>
    }
  </div>
</div>

<div class="d-flex justify-content-center gap-2 mt-4">
    <a asp-action="Index" asp-route-page="@returnPage" class="btn btn-outline-secondary">Volver</a>
    @if (canManageProductos)
    {
        <a asp-action="Edit" asp-route-id="@Model.Id" asp-route-page="@returnPage" class="btn btn-primary">Editar</a>
    }
</div>
