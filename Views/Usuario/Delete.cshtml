@model mi_ferreteria.Models.Usuario
@{
    ViewData["Title"] = "Eliminar Usuario";
}
<h2>Eliminar Usuario</h2>
<div class="alert alert-warning">¿Estás seguro de que quieres eliminar este usuario? Esta acción no se puede deshacer.</div>
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label>Nombre</label>
        <input asp-for="Nombre" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label>Email</label>
        <input asp-for="Email" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label>Activo</label>
        <input asp-for="Activo" type="checkbox" disabled />
    </div>
    <div class="d-flex justify-content-center gap-2 mt-3">
        <button type="submit" class="btn btn-danger px-4">Eliminar</button>
        <a asp-action="Index" class="btn btn-outline-secondary px-4">Volver</a>
    </div>
</form>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const form = document.querySelector('form[method="post"]');
            if (form) {
                form.addEventListener('submit', function (e) {
                    const nombre = document.querySelector('[name="Nombre"]')?.value || 'este usuario';
                    if (!confirm(`¿Confirmas que deseas eliminar ${nombre}?`)) {
                        e.preventDefault();
                    }
                });
            }
        });
    </script>
}
