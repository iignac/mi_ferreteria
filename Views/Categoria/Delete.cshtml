@model mi_ferreteria.Models.Categoria
@{
    ViewData["Title"] = "Eliminar Categoría";
}
<h2>Eliminar Categoría</h2>
<div class="alert alert-warning">¿Seguro que deseas eliminar esta categoría? Esta acción no se puede deshacer.</div>
<form asp-action="Delete" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <div class="mb-2">
        <label class="form-label">Nombre</label>
        <input class="form-control" value="@Model.Nombre" readonly />
    </div>
    <div class="d-flex justify-content-center gap-2 mt-3">
        <button type="submit" class="btn btn-danger px-4">Eliminar</button>
        <a asp-action="Index" class="btn btn-outline-secondary px-4">Volver</a>
    </div>
</form>

