@model mi_ferreteria.ViewModels.StockCriticosViewModel
@using System.Linq
@{
    ViewData["Title"] = "Productos con stock crítico";
    var tieneResultados = Model?.Productos != null && Model.Productos.Any();
    var query = Model?.Query ?? string.Empty;
}

<div class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-2">
    <div>
        <h2 class="mb-0">Productos con stock crítico</h2>
        <p class="text-muted mb-0">
            Se listan los productos cuyo stock actual es igual o inferior al mínimo configurado.
        </p>
    </div>
    <div class="btn-group">
        <a asp-action="Index" class="btn btn-outline-secondary">Volver a gestión de stock</a>
        <a asp-controller="Stock" asp-action="Criticos" class="btn btn-primary active">Refrescar</a>
    </div>
</div>

<div class="alert alert-warning">
    <strong>@Model?.TotalCount</strong> producto@(Model?.TotalCount == 1 ? string.Empty : "s") requieren reposición urgente.
</div>

<form method="get" asp-action="Criticos" class="mb-3">
    <div class="input-group">
        <input type="search"
               class="form-control"
               placeholder="Buscar por SKU, nombre, descripción o ubicación"
               name="q"
               value="@query" />
        <input type="hidden" name="page" value="1" />
        <button class="btn btn-primary" type="submit">Buscar</button>
        @if (!string.IsNullOrWhiteSpace(query))
        {
            <a asp-action="Criticos" class="btn btn-outline-secondary">Limpiar</a>
        }
    </div>
</form>

@if (!tieneResultados)
{
    <div class="alert alert-info">
        No se encontraron productos con stock crítico para los filtros aplicados.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover table-bordered align-middle">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>SKU</th>
                    <th>Nombre</th>
                    <th>Stock actual</th>
                    <th>Stock mínimo</th>
                    <th>Unidad</th>
                    <th>Ubicación</th>
                    <th>Precio venta</th>
                    <th class="text-end">Acciones</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var p in Model!.Productos)
            {
                <tr class="table-warning">
                    <td>@p.Id</td>
                    <td>@p.Sku</td>
                    <td>@p.Nombre</td>
                    <td>
                        @p.StockActual
                        <span class="badge bg-danger ms-1">Crítico</span>
                    </td>
                    <td>@p.StockMinimo</td>
                    <td>@p.UnidadMedida</td>
                    <td>@(string.IsNullOrWhiteSpace(p.UbicacionCodigo) ? "-" : p.UbicacionCodigo)</td>
                    <td>$ @p.PrecioVentaActual.ToString("0.00")</td>
                    <td class="text-end">
                        <a asp-controller="StockProducto"
                           asp-action="Manage"
                           asp-route-id="@p.Id"
                           class="btn btn-sm btn-outline-primary">
                            Ajustar stock
                        </a>
                        <a asp-controller="Producto"
                           asp-action="Edit"
                           asp-route-id="@p.Id"
                           class="btn btn-sm btn-outline-secondary">
                            Editar producto
                        </a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>

    if (Model.TotalPages > 1)
    {
        var start = Math.Max(1, Model.Page - 2);
        var end = Math.Min(Model.TotalPages, Model.Page + 2);
        <nav aria-label="Productos críticos" class="mt-3">
            <ul class="pagination justify-content-center">
                <li class="page-item @(Model.Page <= 1 ? "disabled" : string.Empty)">
                    <a class="page-link"
                       asp-action="Criticos"
                       asp-route-q="@query"
                       asp-route-page="@(Model.Page - 1)">Anterior</a>
                </li>
                @for (var i = start; i <= end; i++)
                {
                    <li class="page-item @(i == Model.Page ? "active" : string.Empty)">
                        <a class="page-link"
                           asp-action="Criticos"
                           asp-route-q="@query"
                           asp-route-page="@i">@i</a>
                    </li>
                }
                <li class="page-item @(Model.Page >= Model.TotalPages ? "disabled" : string.Empty)">
                    <a class="page-link"
                       asp-action="Criticos"
                       asp-route-q="@query"
                       asp-route-page="@(Model.Page + 1)">Siguiente</a>
                </li>
            </ul>
        </nav>
    }
}
