@using mi_ferreteria.ViewModels
@model AuditoriaListadoViewModel
@{
    ViewData["Title"] = "Auditoria de usuarios";
    string FechaLocal(DateTimeOffset fecha) => fecha.ToLocalTime().ToString("dd/MM/yyyy HH:mm");
    bool HayFiltro() => Model?.TieneFiltrosActivos == true;
    string FechaInput(DateTimeOffset? fecha) => fecha?.ToString("yyyy-MM-dd") ?? string.Empty;
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <div>
        <h1 class="h3 mb-0">Auditoria de acciones</h1>
        <p class="text-muted mb-0">Registro de todo lo que hacen los usuarios. Solo lectura para administradores.</p>
    </div>
    <span class="badge bg-warning text-dark align-self-start">Solo administradores</span>
    </div>

<div class="card shadow-sm">
    <div class="card-header bg-white">
        <div class="d-flex flex-column flex-lg-row justify-content-between gap-3">
            <div>
                <h5 class="mb-0">Ultimos movimientos</h5>
                <small class="text-muted">@Model.TotalCount registros en total</small>
            </div>
            <form asp-controller="Admin" asp-action="Auditoria" method="get" class="w-100">
                <div class="row g-2">
                    <div class="col-12 col-md-3">
                        <label class="form-label form-label-sm mb-1">Area</label>
                        <select name="modulo" class="form-select form-select-sm">
                            <option value="">Todas</option>
                            @{
                                var modOpts = Model.ModulosDisponibles ?? new List<FiltroOpcion>();
                            }
                            @foreach (var opt in modOpts)
                            {
                                var selected = string.Equals(opt.Value, Model.SelectedModulo, StringComparison.OrdinalIgnoreCase);
                                if (selected)
                                {
                                    <option value="@opt.Value" selected>@opt.Label</option>
                                }
                                else
                                {
                                    <option value="@opt.Value">@opt.Label</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="col-12 col-md-3">
                        <label class="form-label form-label-sm mb-1">Operacion</label>
                        <select name="operacion" class="form-select form-select-sm">
                            <option value="">Todas</option>
                            @{
                                var operOpts = Model.OperacionesDisponibles ?? new List<FiltroOpcion>();
                            }
                            @foreach (var opt in operOpts)
                            {
                                var selected = string.Equals(opt.Value, Model.SelectedOperacion, StringComparison.OrdinalIgnoreCase);
                                if (selected)
                                {
                                    <option value="@opt.Value" selected>@opt.Label</option>
                                }
                                else
                                {
                                    <option value="@opt.Value">@opt.Label</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="col-12 col-md-2">
                        <label class="form-label form-label-sm mb-1">Desde</label>
                        <input type="date" name="desde" class="form-control form-control-sm" value="@FechaInput(Model.FechaDesde)" />
                    </div>
                    <div class="col-12 col-md-2">
                        <label class="form-label form-label-sm mb-1">Hasta</label>
                        <input type="date" name="hasta" class="form-control form-control-sm" value="@FechaInput(Model.FechaHasta)" />
                    </div>
                    <div class="col-12 col-md-2">
                        <label class="form-label form-label-sm mb-1">Texto libre</label>
                        <input type="text"
                               class="form-control form-control-sm"
                               placeholder="Palabra clave"
                               name="search"
                               value="@(Model.SearchTerm ?? string.Empty)" />
                    </div>
                </div>
                <div class="d-flex flex-wrap gap-2 mt-2">
                    <button type="submit" class="btn btn-primary btn-sm">Aplicar filtros</button>
                    @if (HayFiltro())
                    {
                        <a class="btn btn-outline-secondary btn-sm" asp-controller="Admin" asp-action="Auditoria">Limpiar</a>
                    }
                </div>
            </form>
        </div>
        @if (HayFiltro())
        {
            <div class="mt-3 d-flex flex-wrap gap-2">
                @if (!string.IsNullOrWhiteSpace(Model.SelectedModuloLabel))
                {
                    <span class="badge bg-light text-dark border">Area: @Model.SelectedModuloLabel</span>
                }
                @if (!string.IsNullOrWhiteSpace(Model.SelectedOperacionLabel))
                {
                    <span class="badge bg-light text-dark border">Operacion: @Model.SelectedOperacionLabel</span>
                }
                @if (Model.FechaDesde.HasValue)
                {
                    <span class="badge bg-light text-dark border">Desde: @Model.FechaDesde.Value.ToString("dd/MM/yyyy")</span>
                }
                @if (Model.FechaHasta.HasValue)
                {
                    <span class="badge bg-light text-dark border">Hasta: @Model.FechaHasta.Value.ToString("dd/MM/yyyy")</span>
                }
                @if (!string.IsNullOrWhiteSpace(Model.SearchTerm))
                {
                    <span class="badge bg-light text-dark border">Texto: "@Model.SearchTerm"</span>
                }
            </div>
        }
    </div>
    <div class="card-body p-0">
        @if (Model.Registros == null || Model.Registros.Count == 0)
        {
            var mensaje = HayFiltro()
                ? "No se encontraron registros que coincidan con los filtros aplicados."
                : "Aun no hay eventos registrados.";
            <div class="p-4 text-center text-muted">@mensaje</div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th style="width: 170px;">Fecha</th>
                            <th style="width: 220px;">Usuario</th>
                            <th>Accion</th>
                            <th>Detalle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Registros)
                        {
                            <tr>
                                <td class="text-nowrap">@FechaLocal(item.Fecha)</td>
                                <td>
                                    <div class="fw-semibold">@item.UsuarioNombre</div>
                                    <small class="text-muted">ID @item.UsuarioId</small>
                                </td>
                                <td class="fw-semibold">@item.Accion</td>
                                <td class="text-muted">@item.Detalle</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

@if (Model.TotalPages > 1)
{
    <nav class="mt-3">
        <ul class="pagination justify-content-center">
            <li class="page-item @(Model.Page <= 1 ? "disabled" : string.Empty)">
                <a class="page-link"
                   asp-controller="Admin"
                   asp-action="Auditoria"
                   asp-route-page="@(Model.Page - 1)"
                   asp-route-search="@Model.SearchTerm"
                   asp-route-modulo="@Model.SelectedModulo"
                   asp-route-operacion="@Model.SelectedOperacion"
                   asp-route-desde="@FechaInput(Model.FechaDesde)"
                   asp-route-hasta="@FechaInput(Model.FechaHasta)">Anterior</a>
            </li>
            <li class="page-item disabled">
                <span class="page-link">Pagina @Model.Page de @Model.TotalPages</span>
            </li>
            <li class="page-item @(Model.Page >= Model.TotalPages ? "disabled" : string.Empty)">
                <a class="page-link"
                   asp-controller="Admin"
                   asp-action="Auditoria"
                   asp-route-page="@(Model.Page + 1)"
                   asp-route-search="@Model.SearchTerm"
                   asp-route-modulo="@Model.SelectedModulo"
                   asp-route-operacion="@Model.SelectedOperacion"
                   asp-route-desde="@FechaInput(Model.FechaDesde)"
                   asp-route-hasta="@FechaInput(Model.FechaHasta)">Siguiente</a>
            </li>
        </ul>
    </nav>
}
